<script>

document.addEventListener('DOMContentLoaded', function() {
    const mobileNavMenu = document.getElementById('mobileNavContent');
    const mobileLoginButton = document.querySelector('.mobile-login-toggle');

    if (mobileNavMenu && mobileLoginButton) {
        // 監聽選單展開事件
        mobileNavMenu.addEventListener('show.bs.collapse', function() {
            mobileLoginButton.style.display = 'none'; // 隱藏按鈕
        });

        // 監聽選單收合事件
        mobileNavMenu.addEventListener('hide.bs.collapse', function() {
            mobileLoginButton.style.display = 'block'; // 顯示按鈕
        });
    }
});

</script>
